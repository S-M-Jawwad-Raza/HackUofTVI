<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:src="@drawable/Header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icons_at_bottom"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/icons_at_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/interesting_facts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/interesting_facts"
        app:layout_constraintBottom_toTopOf="@+id/translation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome"
        app:layout_constraintVertical_bias="0.028" />

    <ImageView
        android:id="@+id/translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:src="@drawable/Translation"
        app:layout_constraintBottom_toTopOf="@+id/myprofile"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="Roboto"
        android:text="Welcome to Thrive!"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <ImageView
        android:id="@+id/myprofile"
        android:layout_width="wrap_content"
        android:layout_height="254dp"
        android:src="@drawable/myprofile"
        app:layout_constraintBottom_toTopOf="@+id/icons_at_bottom"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="90dp"
        android:layout_height="94dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/profile_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translation"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/home"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:text=""
        android:background="@android:color/transparent"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="662dp" />

    <Button
        android:id="@+id/photo_translate"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:background="@android:color/transparent"
        android:text=""
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="662dp" />

    <Button
        android:id="@+id/voice_translate"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:background="@android:color/transparent"
        android:text=""
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="662dp" />

    <Button
        android:id="@+id/resources"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:background="@android:color/transparent"
        android:text=""
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="662dp" />

    <Button
        android:id="@+id/post"
        android:layout_width="68dp"
        android:layout_height="66dp"
        android:background="@android:color/transparent"
        android:text=""
        tools:layout_editor_absoluteX="327dp"
        tools:layout_editor_absoluteY="662dp" />

</android.support.constraint.ConstraintLayout>